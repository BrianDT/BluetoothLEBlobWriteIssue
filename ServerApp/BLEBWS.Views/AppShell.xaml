<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:BluetoothLEBlobWriteIssueServerApp.Views"
       xmlns:d="http://xamarin.com/schemas/2014/forms/design"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       mc:Ignorable="d"
       x:Class="BluetoothLEBlobWriteIssueServerApp.Views.AppShell"
       Navigating="OnNavigating"
       Navigated="OnNavigated">

    <ShellContent x:Name="content"
                  Title="Set Permissions"
                  Icon="connected_icon.png"
                  ContentTemplate="{DataTemplate views:PermissionsPage}"
                  Shell.NavBarIsVisible="false"
                  Shell.TabBarIsVisible="false">
    </ShellContent>
    <FlyoutItem  x:Name="imageDisplay"
                 Title="Image"
                 Icon="connected_icon.png"
                 Shell.NavBarIsVisible="false"
                 Shell.TabBarIsVisible="false">
        <ShellContent>
            <views:MainPage />
        </ShellContent>
    </FlyoutItem>
</Shell>